<aura:component implements="force:appHostable,forceCommunity:availableForAllPageTypes" access="global" controller="DocumentsContainerApexController">
    <!-- Attributes -->
    <aura:attribute name="currentFormId" type="Id" default="a001U000002t0cBQAQ"/>
    <aura:attribute name="contactId" type="Id" default="0031U000006SqW9QAK"/>
    <aura:attribute name="forms" type="Form__c[]"/>
    
    <!-- Handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler name="formClick" event="c:FormClick" action="{!c.handleFormClick}"/>
    
    <!-- Div to split sections -->
    <div class="slds-grid slds-gutters" style="height: 100vh !important;">
        <div class="slds-col slds-size_1-of-4" style="height: 100vh !important;">
            <c:FormList contactId="{!v.contactId}" forms="{!v.forms}"/>
        </div>
        <div class="slds-col slds-size_3-of-4">
            <!-- Main Form Element Goes Here -->
            <c:showForm contactId="{!v.contactId}" formId="{!v.currentFormId}" formList="{!v.forms}" />
        </div>
    </div>

</aura:component>